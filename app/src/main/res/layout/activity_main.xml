<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgSlot2"
        android:layout_width="89dp"
        android:layout_height="83dp"
        android:layout_marginTop="184dp"
        app:layout_constraintStart_toEndOf="@+id/imgSlot1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/slot_3" />

    <ImageView
        android:id="@+id/imgSlot3"
        android:layout_width="89dp"
        android:layout_height="83dp"
        android:layout_marginTop="184dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgSlot2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/slot_3" />

    <ImageView
        android:id="@+id/imgSlot1"
        android:layout_width="89dp"
        android:layout_height="83dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="184dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/slot_3" />

    <Button
        android:id="@+id/btnStartStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="SPIN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSlot2" />

</androidx.constraintlayout.widget.ConstraintLayout>